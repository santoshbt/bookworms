<h2> New Review </h2>
<div class="form-group col-xs-4">
<%= form_for [@genre, @book, @review] do |f| %> 
	<%= f.label :title %>
	<%= f.text_field :title, class: "form-control" %>

	<br />

	<%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  
  	<br />
  <%= f.submit 'Save', class: "btn btn-success" %>

<% end %>
</div>