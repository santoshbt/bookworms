<style type="text/css">
	table, th, td {
	    border: 1px solid black;
	}
</style>

<h1>Books in Genre <%= @genre.name %></h1>

<table style="width:50%">
	<tr>
		<th>
			Title 
		</th>
		<th>
			Author Name
		</th>
	</tr>
	<% @books.each do |book| %>
		<% unless book.try(:title).blank? %>
			<tr>
				<td>
					<%= book.title %>
				</td>
				<td>
					<%= book.author_name %>
				</td>	
			</tr>
		<% end %>
	<% end %>			
</table>
<br />
<%= link_to "Back", genre_path(id: @genre.id) %>

	